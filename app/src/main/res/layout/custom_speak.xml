<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/speak_custom_speak_whole_relativelayout"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/speak_custom_speak_bg_imageview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/speak_bg"/>

    <TextView
        android:id="@+id/speak_custom_speak_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/chapter_one_wizard_before_assessment_speak_1"
        style="@style/speak_text"/>

</RelativeLayout>