<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android">

    <data>
        <variable
            name="chapterData"
            type="com.redeminds.app.uicomponents.ChapterTitle.ChapterTitleObject" />
    </data>
<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="vertical">

    <TextView
        android:id="@+id/custom_chapter_title_chapter_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@{chapterData.chapter_number}"
        android:layout_marginTop="25dp"
        android:textColorHint="@color/assessment_title_color"
        android:textSize="35sp"
        android:fontFamily="@font/starife_demo_regular"
        android:textColor="@color/assessment_title_color"/>

    <TextView
        android:id="@+id/custom_chapter_title_chapter_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@{chapterData.chapter_name}"
        android:textColorHint="@color/assessment_title_color"
        android:textSize="75sp"
        android:fontFamily="@font/starife_demo_regular"
        android:textColor="@color/assessment_title_color"/>

    <TextView
        android:id="@+id/custom_chapter_title_chapter_tagline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@{chapterData.chapter_tagline}"
        android:layout_marginTop="88dp"
        android:textColorHint="@color/assessment_title_color"
        android:textSize="35sp"
        android:fontFamily="@font/starife_demo_regular"
        android:textColor="@color/assessment_title_color"/>


</LinearLayout>
</layout>